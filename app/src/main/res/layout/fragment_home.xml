<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.klinger2709.klingerju.flyffmanager.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/icon"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView2"
            android:layout_marginTop="20dp" />

        <TextView
            android:text="Schreib mir dazu entweder eine E-Mail an gaming.julian94@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@color/my_dark_blue"
            android:textAlignment="center"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp" />

        <TextView
            android:text="Oder auf dem Server Murano an"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/textView5"
            android:textColor="@color/my_dark_blue"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Herzlich Willkommen,\n\ndas ist der erste Entwurf vom Flyff Manager.\n\nSchau doch mal ins Menü und klick Dich durch.\n\nÜber Feedback würde ich mich riesig freuen!"
